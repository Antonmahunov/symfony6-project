{% extends 'base.html.twig' %}

{% block title %}Hello MatchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if game is not null %}
        GAME ID: {{ game.id }}
    {% endif %}
    <form method="POST">
        <input type="text" name="matchLeagueId" placeholder="matchLeagueId">
        <input type="text" name="homeTeam" placeholder="homeTeam">
        <input type="text" name="awayTeam" placeholder="awayTeam">
        <input type="text" name="awayTeamGoal" placeholder="awayTeamGoal">
        <input type="text" name="awayTeamGoal" placeholder="awayTeamGoal">
        <input type="submit" value="submit">
    </form>
</div>
{% endblock %}
